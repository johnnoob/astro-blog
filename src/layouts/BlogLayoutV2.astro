---
// astro components
import BaseLayout from "@/layouts/BaseLayout.astro";
// react components
import FilterAndPostSection from "@/components/BlogV2/FilterAndPostSection";
// content collection
import { getCollection } from "astro:content";

const posts = await getCollection(
  "posts",
  (post) => post.data.isDraft === false
);
// 將非同步post.render()的結果取出minutes
const fetchPostDetails = async () => {
  const details = await Promise.all(
    posts.map(async (post) => {
      const renderedPost = await post.render();
      return {
        ...post,
        minutes: renderedPost.remarkPluginFrontmatter.minutes,
      };
    })
  );
  return details;
};
const augmentedAllPosts = await fetchPostDetails();
---

<BaseLayout pageTitle="BlogV2"
  ><FilterAndPostSection allPosts={augmentedAllPosts} client:load />
</BaseLayout>
