---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
const posts = await getCollection("posts");
console.log(posts);
---

<BaseLayout pageTitle="Blog">
  {
    posts.map((post) => (
      <a href={`/blog/${post.slug}`}>
        <h2>{post.data.title}</h2>
      </a>
    ))
  }
</BaseLayout>
