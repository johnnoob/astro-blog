---
import type { TocItem } from "./utils.ts";
const { heading } = Astro.props;
---

<li>
  <a href={"#" + heading.slug}>
    {heading.text}
  </a>
  {
    heading.subheadings.length > 0 && (
      <ul class="pl-3">
        {heading.subheadings.map((subheading: TocItem) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
